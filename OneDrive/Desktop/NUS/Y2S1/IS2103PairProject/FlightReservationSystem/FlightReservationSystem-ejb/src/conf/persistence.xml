<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="FlightReservationSystem-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/flightReservationSystem</jta-data-source>
    <class>entity.Aircraft</class>
    <class>entity.AircraftConfiguration</class>
    <class>entity.Airport</class>
    <class>entity.CabinClass</class>
    <class>entity.Fare</class>
    <class>entity.Flight</class>
    <class>entity.FlightRoute</class>
    <class>entity.FlightSchedule</class>
    <class>entity.FlightSchedulePlan</class>
    <class>entity.Passenger</class>
    <class>entity.Seat</class>
    <class>entity.CreditCard</class>
    <class>entity.Customer</class>
    <class>entity.Employee</class>
    <class>entity.FlightReservation</class>
    <class>entity.Partner</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
